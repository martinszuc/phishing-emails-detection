<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/md_theme_dark_surface"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:padding="16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/tvPackageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Package Name"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="@string/delete_email_package"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:src="@android:drawable/ic_delete" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvIsPhishy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="Phishy"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvCreationDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="Creation Date"
                android:textColor="@color/md_theme_dark_primary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvPackageSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="Size: XX MB"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNumberOfEmails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="Emails: XX"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>